<main class="content" role="main">

    <article class="{{post_class}}">

        <div class="post-header clearfix">
            <h2 class="post-title special-font bold col-md-7">{{title}}</h2>
            <section class="post-meta text-right col-md-4 pull-right">
              <br>
                <small><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">posted on {{date format="DD MMMM YYYY"}}</time> {{!tags prefix=" on "}}</small>
            </section>
        </div>
        <br>
        {{#if image}}
        <section class="post-image text-center">
          <img src="{{image}}" class="img-responsive" />
        </section>
        <br>
        {{/if}}
        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">

